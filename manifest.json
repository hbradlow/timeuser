{
    "manifest_version": 2,

    "name": "Time User",
    "description": "Stuff when you are bored.",
    "version": "1.0",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "permissions": [
        "https://*/",
        "http://*/"        
    ],
    "background": {
        "scripts": ["assets/jquery.min.js", "harness/test.js", "fun_facts/fun_facts.js"]
    },
    "browser_action": {
        "default_icon": "assets/icon.png",
        "default_popup": "harness/index.html"
    }
}
